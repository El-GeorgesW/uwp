<ContentDialog
    x:Class="MegaApp.Dialogs.ChangePasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MegaApp.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Margin="24"
    Style="{ThemeResource MegaContentDialogStyle}"
    Background="{ThemeResource MegaAppBackgroundBrush}"
    BorderBrush="{ThemeResource MegaDialogBorderBrush}"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="SaveButtonClick"
    SecondaryButtonClick="CancelButtonClick">
    <ContentDialog.Title>
        <TextBlock
            FontSize="24"
            Text="Change password"/>
    </ContentDialog.Title>
    
    <Grid>
        <StackPanel>
            <TextBlock 
                x:Name="Description"
                Margin="0,16,0,16"
                FontSize="14"
                Text="Enter and confirm your new password and click save."
                TextWrapping="WrapWholeWords"/>
            <PasswordBox
                x:Name="CurrentPasswordBox"
                Margin="0,0,0,24"
                FontSize="15"
                PasswordChanged="OnCurrentPasswordChanged"
                PasswordRevealMode="Peek"
                PlaceholderText="Current password"
                Style="{StaticResource MegaPasswordBoxStyle}"/>
            <PasswordBox
                x:Name="NewPasswordBox"
                FontSize="15"
                PasswordChanged="OnNewPasswordChanged"
                PasswordRevealMode="Peek"
                PlaceholderText="New password"
                Style="{StaticResource MegaPasswordBoxStyle}"/>
