<views:BaseContactsManagerPage
    x:Class="MegaApp.Views.ContactsManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors="using:MegaApp.Behaviors"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="using:MegaApp.Extensions"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MegaApp.Views"
    xmlns:triggers="using:WindowsStateTriggers"
    xmlns:userControls="using:MegaApp.UserControls"
    xmlns:views="using:MegaApp.Views"
    xmlns:viewModels="using:MegaApp.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:ContactsManagerViewModel}">

    <SplitView
        x:Name="ContactProfileSplitView"
        DisplayMode="Inline"
        IsPaneOpen="False"
        PanePlacement="Right">
        <SplitView.Pane>
            <userControls:ContactProfilePanel
                x:Name="ContactProfilePanelControl"
                Background="{StaticResource MegaAppBackgroundBrush}"
                Foreground="{StaticResource MegaAppForegroundBrush}"
                Contact="{Binding MegaContacts.FocusedItem}" />
        </SplitView.Pane>

        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="TopRow" Height="{StaticResource PageHeaderRowHeight}"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="TopRowGrid" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  TOP COMMAND BAR AREA (ONLY DESKTOP)  -->
                <Grid
                    x:Name="TopCommandBar"
                    Grid.Row="0"
                    Grid.Column="0">

                    <!--  CONTACTS TOP COMMAND BAR (DESKTOP ONLY)  -->
                    <CommandBar
                        DataContext="{Binding ActiveView}"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        extensions:CommandBarExtensions.HideMoreButton="True"
                        Style="{StaticResource MegaCommandBarStyle}"
                        Visibility="{Binding ContentType, ConverterParameter=Contacts, Converter={StaticResource ContactsContentTypeToVisibilityConverter}}">
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding AddContactText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding AddContactText, Mode=OneTime}"
                            Command="{Binding AddContactCommand}"
                            Click="OnButtonClick">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding AddContactPathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding ViewProfileText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding ViewProfileText, Mode=OneTime}"
                            Command="{Binding OpenContactProfileCommand}"
                            Click="OnButtonClick"
                            Visibility="{Binding ItemCollection.OnlyOneSelectedItem, Converter={StaticResource BoolToVisibilityConverter}}">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding ViewProfilePathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding RemoveContactText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding RemoveContactText, Mode=OneTime}"
                            Command="{Binding RemoveContactCommand}"
                            Click="OnButtonClick"
                            Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding RemovePathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding CancelText, Mode=OneTime}"                        
                            ToolTipService.ToolTip="{Binding CancelText, Mode=OneTime}"
                            Command="{Binding ItemCollection.MultiSelectCommand}"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding MultiSelectPathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar>

                    <!--  INCOMING CONTACT REQUESTS TOP COMMAND BAR (DESKTOP ONLY)  -->
                    <CommandBar
                        DataContext="{Binding ActiveView}"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        extensions:CommandBarExtensions.HideMoreButton="True"
                        Style="{StaticResource MegaCommandBarStyle}"
                        Visibility="{Binding ContentType, ConverterParameter=IncomingRequests, Converter={StaticResource ContactsContentTypeToVisibilityConverter}}">
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding AcceptContactText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding AcceptContactText, Mode=OneTime}"
                            Command="{Binding AcceptContactRequestCommand}"
                            Click="OnButtonClick"
                            Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxHeight="14" MaxWidth="14">
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding AcceptPathData, Mode=OneTime}" />
                            </Viewbox>
                        </AppBarButton>
                        <AppBarButton 
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding DenyContactText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding DenyContactText, Mode=OneTime}"
                            Command="{Binding DeclineContactRequestCommand}"
                            Click="OnButtonClick"
                            Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding CancelPathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding CancelText, Mode=OneTime}"                        
                            ToolTipService.ToolTip="{Binding CancelText, Mode=OneTime}"
                            Command="{Binding ItemCollection.MultiSelectCommand}"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding MultiSelectPathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar>

                    <!--  OUTGOING CONTACT REQUESTS TOP COMMAND BAR (DESKTOP ONLY)  -->
                    <CommandBar
                        DataContext="{Binding ActiveView}"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        extensions:CommandBarExtensions.HideMoreButton="True"
                        Style="{StaticResource MegaCommandBarStyle}"
                        Visibility="{Binding ContentType, ConverterParameter=OutgoingRequests, Converter={StaticResource ContactsContentTypeToVisibilityConverter}}">
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding AddContactText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding AddContactText, Mode=OneTime}"
                            Command="{Binding AddContactCommand}"
                            Click="OnButtonClick">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding AddContactPathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding RemindContactText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding RemindContactText, Mode=OneTime}"
                            Command="{Binding RemindContactRequestCommand}"
                            Click="OnButtonClick"
                            Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxHeight="16" MaxWidth="16">
                                <FontIcon Glyph="&#xE1F2;"/>
                            </Viewbox>
                        </AppBarButton>
                        <AppBarButton 
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding CancelInviteText, Mode=OneTime}" 
                            ToolTipService.ToolTip="{Binding CancelInviteText, Mode=OneTime}"
                            Command="{Binding CancelContactRequestCommand}"
                            Click="OnButtonClick"
                            Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding CancelPathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            Style="{StaticResource MegaAppBarButtonStyle}"
                            Label="{Binding CancelText, Mode=OneTime}"                        
                            ToolTipService.ToolTip="{Binding CancelText, Mode=OneTime}"
                            Command="{Binding ItemCollection.MultiSelectCommand}"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <AppBarButton.Icon>
                                <PathIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{Binding MultiSelectPathData, Mode=OneTime}" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar>
                </Grid>

                <!--  PERMANENT TOP COMMAND BAR (ALL DEVICES)  -->
                <CommandBar
                    DataContext="{Binding ActiveView}"
                    Grid.Row="0"
                    Grid.Column="1"
                    extensions:CommandBarExtensions.HideMoreButton="True"
                    Background="Transparent"
                    IsEnabled="{Binding ItemCollection.Items, Converter={StaticResource CollectionToBoolConverter}, Mode=OneWay}">
                    <AppBarSeparator 
                        x:Name="PermanentTopCommandBarSeparator"
                        Margin="-12,0"
                        VerticalAlignment="Center"/>
                    <AppBarButton
                        x:Name="BtnSort"
                        Click="OnSortClick"
                        Label="{Binding SortByText}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding SortByText}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding SortByPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
            </Grid>

            <Grid Grid.Row="1" Margin="12,0">
                <Pivot
                    x:Name="ContactsManagerPagePivot"
                    HeaderTemplate="{StaticResource MegaPivoHeaderTemplate}"
                    SelectionChanged="OnPivotSelectionChanged">
                    <PivotItem
                        x:Name="ContactsPivot"
                        Header="{Binding ContactsTitle, Mode=OneTime}"
                        CacheMode="{x:Null}">
                        <Grid DataContext="{Binding MegaContacts}">
                            <userControls:ButtonPanel
                                x:Name="ContactsButtonPanelControl"
                                Background="{StaticResource MegaAppBackgroundBrush}"
                                ButtonAlignment="Below"
                                ButtonCommand="{Binding AddContactCommand}"
                                ButtonMinWidth="130"
                                ButtonText="{Binding AddContactText, Mode=OneTime}"
                                Foreground="{StaticResource MegaAppForegroundBrush}"
                                HeaderText="{Binding EmptyContactsHeaderText, Mode=OneTime}"
                                IsVisible="{Binding ItemCollection.Items, Converter={StaticResource InverseCollectionToBoolConverter}}"
                                SubHeaderMargin="0,14,0,28"
                                SubHeaderText="{Binding EmptyContactsSubHeaderText, Mode=OneTime}"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center">
                                <userControls:ButtonPanel.SubHeaderForeground>
                                    <SolidColorBrush Opacity="0.6" Color="{ThemeResource MegaAppForeground}" />
                                </userControls:ButtonPanel.SubHeaderForeground>
                            </userControls:ButtonPanel>
                            <Grid Visibility="{Binding ItemCollection.Items, Converter={StaticResource CollectionVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                                    <ContentControl Template="{StaticResource SelectAllCheckBoxWithOrderTypeAndNumberOfItems}"/>
                                    <ContentControl Template="{StaticResource OrderTypeAndNumberOfItems}"/>
                                </Grid>
                                <Grid Margin="0,-8,-12,0" Grid.Row="1">
                                    <ListView
                                        x:Name="ListViewContacts"
                                        Margin="-12,0,0,0"
                                        Background="{StaticResource MegaAppBackgroundBrush}"
                                        IsMultiSelectCheckBoxEnabled="{Binding ItemCollection.IsMultiSelectActive}"
                                        ItemContainerStyle="{StaticResource StretchedListviewItemStyle}"
                                        ItemTemplate="{StaticResource MegaContactItemContentDesktop}"
                                        ItemsSource="{Binding ItemCollection.Items}"
                                        Tapped="OnContactTapped"
                                        RightTapped="OnContactRightTapped">
                                        <interactivity:Interaction.Behaviors>
                                            <behaviors:MultiSelect SelectedItems="{Binding ItemCollection.SelectedItems, Mode=TwoWay}" />
                                            <core:EventTriggerBehavior EventName="SelectionChanged">
                                                <core:EventTriggerBehavior.Actions>
                                                    <core:InvokeCommandAction Command="{Binding ItemCollection.SelectionChangedCommand}" />
                                                </core:EventTriggerBehavior.Actions>
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </ListView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </PivotItem>
                    <PivotItem
                        x:Name="IncomingPivot"
                        Header="{Binding IncomingTitle, Mode=OneTime}"
                        CacheMode="{x:Null}">
                        <Grid DataContext="{Binding IncomingContactRequests}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <ContentControl Template="{StaticResource SelectAllCheckBoxWithOrderTypeAndNumberOfItems}"/>
                                <ContentControl Template="{StaticResource OrderTypeAndNumberOfItems}"/>
                            </Grid>
                            <Grid Margin="0,-8,-12,0" Grid.Row="1">
                                <ListView
                                    x:Name="ListViewIncomingContactRequests"
                                    Margin="-12,0,0,0"
                                    Background="{StaticResource MegaAppBackgroundBrush}"
                                    IsMultiSelectCheckBoxEnabled="{Binding ItemCollection.IsMultiSelectActive}"
                                    ItemContainerStyle="{StaticResource StretchedListviewItemStyle}"
                                    ItemTemplate="{StaticResource MegaContactRequestItemContentDesktop}"
                                    ItemsSource="{Binding ItemCollection.Items}"
                                    Tapped="OnContactRequestTapped"
                                    RightTapped="OnContactRequestRightTapped"
                                    Visibility="{Binding ItemCollection.Items, Converter={StaticResource CollectionVisibilityConverter}}">
                                    <interactivity:Interaction.Behaviors>
                                        <behaviors:MultiSelect SelectedItems="{Binding ItemCollection.SelectedItems, Mode=TwoWay}" />
                                        <core:EventTriggerBehavior EventName="SelectionChanged">
                                            <core:EventTriggerBehavior.Actions>
                                                <core:InvokeCommandAction Command="{Binding ItemCollection.SelectionChangedCommand}" />
                                            </core:EventTriggerBehavior.Actions>
                                        </core:EventTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>
                                </ListView>
                            </Grid>
                        </Grid>
                    </PivotItem>
                    <PivotItem
                        x:Name="OutgoingPivot"
                        Header="{Binding OutgoingTitle, Mode=OneTime}"
                        CacheMode="{x:Null}">
                        <Grid DataContext="{Binding OutgoingContactRequests}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <ContentControl Template="{StaticResource SelectAllCheckBoxWithOrderTypeAndNumberOfItems}"/>
                                <ContentControl Template="{StaticResource OrderTypeAndNumberOfItems}"/>
                            </Grid>
                            <Grid Margin="0,-8,-12,0" Grid.Row="1">
                                <ListView
                                    x:Name="ListViewOutgoingContactRequests"
                                    Margin="-12,0,0,0"
                                    Background="{StaticResource MegaAppBackgroundBrush}"
                                    IsMultiSelectCheckBoxEnabled="{Binding ItemCollection.IsMultiSelectActive}"
                                    ItemContainerStyle="{StaticResource StretchedListviewItemStyle}"
                                    ItemTemplate="{StaticResource MegaContactRequestItemContentDesktop}"
                                    ItemsSource="{Binding ItemCollection.Items}"
                                    Tapped="OnContactRequestTapped"
                                    RightTapped="OnContactRequestRightTapped"
                                    Visibility="{Binding ItemCollection.Items, Converter={StaticResource CollectionVisibilityConverter}}">
                                    <interactivity:Interaction.Behaviors>
                                        <behaviors:MultiSelect SelectedItems="{Binding ItemCollection.SelectedItems, Mode=TwoWay}" />
                                        <core:EventTriggerBehavior EventName="SelectionChanged">
                                            <core:EventTriggerBehavior.Actions>
                                                <core:InvokeCommandAction Command="{Binding ItemCollection.SelectionChangedCommand}" />
                                            </core:EventTriggerBehavior.Actions>
                                        </core:EventTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>
                                </ListView>
                            </Grid>
                        </Grid>
                    </PivotItem>
                </Pivot>
            </Grid>

            <!--  BOTTOM COMMAND BAR AREA (MOBILE DEVICES)  -->
            <Grid x:Name="BottomCommandBar" Grid.Row="2">

                <!--  CONTACTS BOTTOM COMMAND BAR (MOBILE DEVICES)  -->
                <CommandBar 
                    DataContext="{Binding ActiveView}"
                    Style="{StaticResource MegaCommandBarStyle}"
                    Visibility="{Binding ContentType, ConverterParameter=Contacts, Converter={StaticResource ContactsContentTypeToVisibilityConverter}}">
                    <AppBarButton
                        Click="OnButtonClick"
                        Command="{Binding AddContactCommand}"
                        Label="{Binding AddContactText, Mode=OneTime}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding AddContactText, Mode=OneTime}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding AddContactPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        Click="OnButtonClick"
                        Command="{Binding RemoveContactCommand}"
                        Label="{Binding RemoveContactText, Mode=OneTime}" 
                        Style="{StaticResource MegaAppBarButtonStyle}"                    
                        ToolTipService.ToolTip="{Binding RemoveContactText, Mode=OneTime}"
                        Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding RemovePathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        Click="OnButtonClick"
                        Command="{Binding ItemCollection.MultiSelectCommand}"
                        IsEnabled="{Binding ItemCollection.Items, Converter={StaticResource CollectionToBoolConverter}, Mode=OneWay}"
                        Label="{Binding MultiSelectText, Mode=OneTime}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding MultiSelectText, Mode=OneTime}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding MultiSelectPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton 
                            Label="{Binding SelectAllText}"
                            Tapped="OnSelectAllTapped"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxWidth="14" MaxHeight="14">
                                <SymbolIcon Symbol="SelectAll" />
                            </Viewbox>
                        </AppBarButton>
                        <AppBarButton 
                            Label="{Binding DeselectAllText}"
                            Tapped="OnDeselectAllTapped"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxWidth="14" MaxHeight="14">
                                <SymbolIcon Symbol="ClearSelection" />
                            </Viewbox>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>

                <!--  INCOMING CONTACT REQUESTS BOTTOM COMMAND BAR (MOBILE DEVICES)  -->
                <CommandBar 
                    DataContext="{Binding ActiveView}"
                    Style="{StaticResource MegaCommandBarStyle}"
                    Visibility="{Binding ContentType, ConverterParameter=IncomingRequests, Converter={StaticResource ContactsContentTypeToVisibilityConverter}}">
                    <AppBarButton 
                        Click="OnButtonClick"
                        Command="{Binding AcceptContactRequestCommand}"
                        Label="{Binding AcceptContactText, Mode=OneTime}" 
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding AcceptContactText, Mode=OneTime}"
                        Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Viewbox MaxHeight="14" MaxWidth="14">
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding AcceptPathData, Mode=OneTime}" />
                        </Viewbox>
                    </AppBarButton>
                    <AppBarButton 
                        Click="OnButtonClick"
                        Command="{Binding DeclineContactRequestCommand}"
                        Label="{Binding DenyContactText, Mode=OneTime}" 
                        ToolTipService.ToolTip="{Binding DenyContactText, Mode=OneTime}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding CancelPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        Click="OnButtonClick"
                        Command="{Binding ItemCollection.MultiSelectCommand}"
                        IsEnabled="{Binding ItemCollection.Items, Converter={StaticResource CollectionToBoolConverter}, Mode=OneWay}"
                        Label="{Binding MultiSelectText, Mode=OneTime}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding MultiSelectText, Mode=OneTime}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding MultiSelectPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton 
                            Label="{Binding SelectAllText}"
                            Tapped="OnSelectAllTapped"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxWidth="14" MaxHeight="14">
                                <SymbolIcon Symbol="SelectAll" />
                            </Viewbox>
                        </AppBarButton>
                        <AppBarButton 
                            Label="{Binding DeselectAllText}"
                            Tapped="OnDeselectAllTapped"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxWidth="14" MaxHeight="14">
                                <SymbolIcon Symbol="ClearSelection" />
                            </Viewbox>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>

                <!--  OUTGOING CONTACT REQUESTS BOTTOM COMMAND BAR (MOBILE DEVICES)  -->
                <CommandBar 
                    DataContext="{Binding ActiveView}"
                    Style="{StaticResource MegaCommandBarStyle}"
                    Visibility="{Binding ContentType, ConverterParameter=OutgoingRequests, Converter={StaticResource ContactsContentTypeToVisibilityConverter}}">
                    <AppBarButton
                        Click="OnButtonClick"
                        Command="{Binding AddContactCommand}"
                        Label="{Binding AddContactText, Mode=OneTime}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding AddContactText, Mode=OneTime}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding AddContactPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        Click="OnButtonClick"
                        Command="{Binding RemindContactRequestCommand}"
                        Label="{Binding RemindContactText, Mode=OneTime}" 
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding RemindContactText, Mode=OneTime}"
                        Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Viewbox MaxHeight="12" MaxWidth="12">
                            <FontIcon Glyph="&#xE1F2;"/>
                        </Viewbox>
                    </AppBarButton>
                    <AppBarButton 
                        Click="OnButtonClick"
                        Command="{Binding CancelContactRequestCommand}"
                        Label="{Binding CancelInviteText, Mode=OneTime}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding CancelInviteText, Mode=OneTime}"
                        Visibility="{Binding ItemCollection.OneOrMoreSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding CancelPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        Click="OnButtonClick"
                        Command="{Binding ItemCollection.MultiSelectCommand}"
                        IsEnabled="{Binding ItemCollection.Items, Converter={StaticResource CollectionToBoolConverter}, Mode=OneWay}"
                        Label="{Binding MultiSelectText, Mode=OneTime}"
                        Style="{StaticResource MegaAppBarButtonStyle}"
                        ToolTipService.ToolTip="{Binding MultiSelectText, Mode=OneTime}">
                        <AppBarButton.Icon>
                            <PathIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="{Binding MultiSelectPathData, Mode=OneTime}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton 
                            Label="{Binding SelectAllText}"
                            Tapped="OnSelectAllTapped"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxWidth="14" MaxHeight="14">
                                <SymbolIcon Symbol="SelectAll" />
                            </Viewbox>
                        </AppBarButton>
                        <AppBarButton 
                            Label="{Binding DeselectAllText}"
                            Tapped="OnDeselectAllTapped"
                            Visibility="{Binding ItemCollection.IsMultiSelectActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Viewbox MaxWidth="14" MaxHeight="14">
                                <SymbolIcon Symbol="ClearSelection" />
                            </Viewbox>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </Grid>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <triggers:DeviceFamilyStateTrigger DeviceFamily="Desktop" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ListViewContacts.SelectionMode" Value="Extended" />
                        <Setter Target="ListViewIncomingContactRequests.SelectionMode" Value="Extended" />
                        <Setter Target="ListViewOutgoingContactRequests.SelectionMode" Value="Extended" />
                        <Setter Target="TopCommandBar.Visibility" Value="Visible" />
                        <Setter Target="BottomCommandBar.Visibility" Value="Collapsed" />
                        <Setter Target="TopRowGrid.Background" Value="{ThemeResource MegaAppBackgroundBrush}" />
                        <Setter Target="PermanentTopCommandBarSeparator.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Mobile">
                    <VisualState.StateTriggers>
                        <triggers:DeviceFamilyStateTrigger DeviceFamily="Mobile" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ListViewContacts.SelectionMode" Value="Single" />
                        <Setter Target="ListViewIncomingContactRequests.SelectionMode" Value="Single" />
                        <Setter Target="ListViewOutgoingContactRequests.SelectionMode" Value="Single" />
                        <Setter Target="TopCommandBar.Visibility" Value="Collapsed" />
                        <Setter Target="BottomCommandBar.Visibility" Value="Visible" />
                        <Setter Target="TopRowGrid.Background" Value="{ThemeResource MegaAppBarBackgroundBrush}" />
