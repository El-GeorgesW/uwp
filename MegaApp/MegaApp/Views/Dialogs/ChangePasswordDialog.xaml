            <PasswordBox
                x:Name="ConfirmNewPasswordBox"
                Margin="0,4,0,0"
                FontSize="15"
                Password="{Binding NewPasswordConfirmation, Mode=TwoWay}"
                PasswordChanged="OnConfirmNewPasswordChanged"
                PasswordRevealMode="Peek"
                PlaceholderText="{Binding ReEnterNewPasswordText, Mode=OneTime}"
                Style="{StaticResource MegaPasswordBoxStyle}"/>
            <TextBlock 
                x:Name="ErrorMessage"
                Margin="0,8,0,0"
                Style="{StaticResource MegaDialogErrorFontStyle}"
