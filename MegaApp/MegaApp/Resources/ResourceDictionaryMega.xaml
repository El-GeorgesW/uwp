                    HorizontalAlignment="Left" 
                    TextWrapping="NoWrap" 
                    Text="{Binding Information}" 
                    VerticalAlignment="Center" 
                    Style="{ThemeResource CaptionTextBlockStyle}" 
                    Grid.Row="1" 
