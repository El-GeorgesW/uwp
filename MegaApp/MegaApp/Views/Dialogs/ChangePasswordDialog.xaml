<dialogViews:BaseChangePasswordDialog
    x:Class="MegaApp.Views.Dialogs.ChangePasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MegaApp.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dialogViews="using:MegaApp.Views.Dialogs"
    xmlns:dialogViewModels="using:MegaApp.ViewModels.Dialogs"
    d:DataContext="{d:DesignInstance dialogViewModels:ChangePasswordDialogViewModel}"
    mc:Ignorable="d"
    Margin="24"
    Style="{ThemeResource MegaContentDialogStyle}"
    Background="{ThemeResource MegaAppBackgroundBrush}"
    BorderBrush="{ThemeResource MegaDialogBorderBrush}"
    PrimaryButtonText="{Binding SaveText, Mode=OneTime}"
    SecondaryButtonText="{Binding CancelText, Mode=OneTime}"
    PrimaryButtonCommand="{Binding SaveButtonCommand}"
    SecondaryButtonCommand="{Binding CancelButtonCommand}"
    Closing="OnClosing">
    <dialogViews:BaseChangePasswordDialog.Title>
        <TextBlock
            Style="{StaticResource MegaDialogTitleFontStyle}"
            Text="{Binding TitleText, Mode=OneTime}"/>
    </dialogViews:BaseChangePasswordDialog.Title>
    
    <Grid>
        <StackPanel>
            <TextBlock 
                x:Name="Description"
                Margin="0,16,0,16"
                Style="{StaticResource MegaDialogContentFontStyle}"
                Text="{Binding DescriptionText, Mode=OneTime}"/>
            <PasswordBox
                x:Name="CurrentPasswordBox"
                Margin="0,0,0,24"
                FontSize="15"
                Password="{Binding CurrentPassword, Mode=TwoWay}"
                PasswordChanged="OnCurrentPasswordChanged"
                PasswordRevealMode="Peek"
                PlaceholderText="{Binding CurrentPasswordText, Mode=OneTime}"
                Style="{StaticResource MegaPasswordBoxStyle}"/>
            <PasswordBox
                x:Name="NewPasswordBox"
                FontSize="15"
                Password="{Binding NewPassword, Mode=TwoWay}"
                PasswordChanged="OnNewPasswordChanged"
                PasswordRevealMode="Peek"
                PlaceholderText="{Binding NewPasswordText, Mode=OneTime}"
                Style="{StaticResource MegaPasswordBoxStyle}"/>
