                    TextWrapping="NoWrap" 
                    Text="{Binding ModificationTime}" 
                    VerticalAlignment="Center" 
                    Style="{ThemeResource CaptionTextBlockStyle}" 
                    Grid.Row="1" 
                    Grid.Column="2"/>
            </Grid>
        </Border>
