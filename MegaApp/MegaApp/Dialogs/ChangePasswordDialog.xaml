                x:Name="ConfirmNewPasswordBox"
                Margin="0,4,0,0"
                FontSize="15"
                PasswordChanged="OnConfirmNewPasswordChanged"
                PasswordRevealMode="Peek"
                PlaceholderText="Re-enter new password"
                Style="{StaticResource MegaPasswordBoxStyle}"/>
