<views:BaseMainPage
    x:Class="MegaApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MegaApp.Views"
    xmlns:userControls="using:MegaApp.UserControls"
    xmlns:viewModels="using:MegaApp.ViewModels"
    xmlns:triggers="using:WindowsStateTriggers"
    mc:Ignorable="d"    
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    SizeChanged="OnSizeChanged">

    <Page.Resources>
        <DataTemplate 
            x:Key="MenuItemTemplate" 
            x:DataType="userControls:MenuItem">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ContentPresenter
                    Grid.Column="0"
                    Content="{x:Bind Icon}"
                    HorizontalAlignment="Stretch"
                    AutomationProperties.AccessibilityView="Raw"/>
                <StackPanel 
                    Orientation="Vertical"
                    Grid.Column="1"
                    Margin="9,5,9,6">
                    <TextBlock
                        Text="{x:Bind Label}" 
                        FontSize="16" 
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Text="{x:Bind SubLabel}" 
                        FontSize="12" 
                        VerticalAlignment="Center"
                        Opacity="0.6"/>
                </StackPanel>                
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup >
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <triggers:DeviceFamilyStateTrigger DeviceFamily="Desktop" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>                        
                        <Setter 
                            Target="HamburgerMenuControl.DisplayMode" 
                            Value="CompactOverlay"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <userControls:HamburgerMenuEx
            x:Name="HamburgerMenuControl"
            ItemsSource="{Binding MenuItems}"
            SelectedMenuItem="{Binding SelectedItem, Mode=TwoWay}"
            OptionsItemsSource="{Binding OptionItems}"
            SelectedOptionItem="{Binding SelectedOptionItem, Mode=TwoWay}"
            ItemTemplate="{StaticResource MenuItemTemplate}"
            OptionsItemTemplate="{StaticResource MenuItemTemplate}"
            PaneBackground="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
            Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
            DisplayMode="Overlay">
            <userControls:FrameEx x:Name="ContentFrame"/>
        </userControls:HamburgerMenuEx>
    </Grid>
    
</views:BaseMainPage>
