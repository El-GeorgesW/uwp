    <x:Double x:Key="InputHeight">40</x:Double>

    <!--Margins-->
    <Thickness x:Key="StackedInputMargin">0,0,0,8</Thickness>
    <Thickness x:Key="MegaPageHeaderLogoMargin">10,0,0,0</Thickness>

